<h3>スケジュール編集</h3>

<%= form_with model: @room do |f| %> <!--フォームの入力画面-->
    <table>
        <tr>
            <th><%= f.label :title,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :first_day,"開始日" %></th>
            <td><%= f.datetime_field :first_day %></td>
        </tr>
        <tr>
            <th><%= f.label :last_day,"終了日" %></th>
            <td><%= f.datetime_field :last_check %></td>
        </tr>
        <tr>
            <th><%= f.label :last_check, "終日" %></th>
            <td><%= f.check_box :last_check %><p>終日の場合は、チェックを入れる</p></td>
        </tr>
        <tr>
            <th><%= f.label :memo,"スケジュールメモ" %></th>
            <td><%= f.text_area :memo %></td>
        </tr>
    </table>
    
    <div>
        <ul>
            <li><%= f.submit "スケジュールの編集を完了する" %></li>
            <li><%= link_to "スケジュール一覧に戻る", :room %></li>
        </ul>
    </div>
<% end %>