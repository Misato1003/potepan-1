<h3>新規登録</h3>

<%= form_with model: @room ,url:new_room_path do |f| %>
    <table>
        <tr>
            <th><%= f.label :title,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        
        <tr>
            <th><%= f.label :first_day,"開始日" %></th>
            <td><%= f.datetime_field :first_day %></td>
        </tr>
        <tr>
            <th><%= f.label :last_day,"終了日" %></th>
            <td><%= f.datetime_field :last_day %></td>
        </tr>
        <tr>
            <th><%= f.label :last_check,"終日" %></th>
            <td><%= f.check_box :last_check %><p>終日の場合はチェックを入れます</p></td>
        </tr>
        <tr>
            <th><%= f.label :memo,"メモ" %></th>
            <td><%= f.text_area :memo %></td>
        </tr>
    </table>
    
    <div>
        <ul>
            <li><%= f.submit"登録完了する" %></li>
        </ul>
    </div>
<% end %>